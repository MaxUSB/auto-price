{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "jsx-double"],
    "no-var-requires": true,
    "no-var-keyword": true,
    "ordered-imports": false,
    "member-ordering": [false],
    "object-literal-sort-keys": false,
    "no-shadowed-variable": true,
    "jsx-alignment": [true],
    "no-submodule-imports": [true, "react-dom", "react-loadable", "@material-ui", "next", "next-server", "src"],
    "no-implicit-dependencies": [true, ["src"]],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-console": [true, "log"],
    "variable-name": {
      "options": ["check-format", "allow-leading-underscore", "allow-pascal-case", "allow-leading-underscore"]
    },
    "curly": [true, "ignore-same-line"],
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "object-literal-key-quotes": [true, "as-needed"],
    "jsx-boolean-value": [false],
    "jsx-no-multiline-js": [false],
    "no-namespace": [false],
    "no-object-literal-type-assertion": false,
    "no-conditional-assignment": false,
    "no-bitwise": false
  }
}
